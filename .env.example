# -----------------------------------------------------------------------------
# Core Server Settings (Production)
# -----------------------------------------------------------------------------
ENVIRONMENT=production
DEBUG=false
HOST=0.0.0.0
PORT=8888
RELOAD=false

# Public URLs (required for OAuth redirects + secure cookies)
FRONTEND_URL=https://your-frontend.example.com
BACKEND_URL=https://your-backend.example.com
AUTH_COOKIE_DOMAIN=your-domain.example.com

# -----------------------------------------------------------------------------
# Builder.io Integration (Next/AI routes)
# -----------------------------------------------------------------------------
BUILDER_PUBLIC_API_KEY=bb_xxx
BUILDER_WRITE_KEY=builder_write_xxx
APP_BASE_URL=https://your-frontend.example.com

# JWT verification for Builder routes
JWT_ISSUER=https://your-app.example.com
JWT_JWKS_URI=https://your-app.example.com/.well-known/jwks.json
ALLOWED_ROLES=admin,designer

# Optional OAuth client creds if you propagate provider claims into your JWTs
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# -----------------------------------------------------------------------------
# AutoCoder Auth (cookie-based sessions)
# -----------------------------------------------------------------------------
JWT_SECRET_KEY=
JWT_ALGORITHM=HS256

# -----------------------------------------------------------------------------
# AI Provider Configuration
# -----------------------------------------------------------------------------
# Anthropic / Claude
ANTHROPIC_API_KEY=
ANTHROPIC_BASE_URL=
ANTHROPIC_AUTH_TOKEN=
ANTHROPIC_DEFAULT_SONNET_MODEL=
ANTHROPIC_DEFAULT_OPUS_MODEL=
ANTHROPIC_DEFAULT_HAIKU_MODEL=

# Gemini
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash

# Ollama (local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_HOST=
API_TIMEOUT_MS=3000000

# -----------------------------------------------------------------------------
# Observability
# -----------------------------------------------------------------------------
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.2
SENTRY_ENV=production

OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_SERVICE_NAME=autocoder-server
OTEL_ENVIRONMENT=production

AUTOCODER_ENABLE_METRICS=0

# -----------------------------------------------------------------------------
# Security / Access Controls
# -----------------------------------------------------------------------------
AUTOCODER_ALLOW_REMOTE=0
AUTOCODER_ALLOWED_ROOTS=/projects

AUTOCODER_AUTH_ENABLED=0
AUTOCODER_AUTH_TYPE=basic
AUTOCODER_AUTH_USER=
AUTOCODER_AUTH_PASS=
AUTOCODER_API_KEY=
AUTOCODER_ROOT_USER=root
AUTOCODER_ROOT_PASS=

# -----------------------------------------------------------------------------
# Playwright / Automation
# -----------------------------------------------------------------------------
PLAYWRIGHT_BROWSER=firefox
PLAYWRIGHT_HEADLESS=true

# -----------------------------------------------------------------------------
# Optional Extras
# -----------------------------------------------------------------------------
EXTRA_READ_PATHS=
PROGRESS_N8N_WEBHOOK_URL=
PROJECT_DIR=.
